<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/d8"
    android:layout_margin="@dimen/d4">

    <TextView
        android:id="@+id/newsItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:padding="@dimen/d4"
        android:textSize="@dimen/item_title_size"/>

    <TextView
        android:id="@+id/newsItemAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsItemTitle"
        android:layout_alignParentStart="true"
        android:padding="@dimen/d4"
        android:textSize="@dimen/item_author_size"/>

    <TextView
        android:id="@+id/newsItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsItemAuthor"
        android:layout_alignParentStart="true"
        android:padding="@dimen/d4"
        android:textSize="@dimen/item_date_size"/>

    <ImageView
        android:id="@+id/newsItemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/d4"
        android:scaleType="fitCenter" />
</RelativeLayout>